@using Data.Model.APIWeb
@using Data.Utils
@using PagedList.Mvc
@using APIProject.Resource
@model UserDetailOutputModel
<div class="modal fade" id="EditUser" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header text-white" style="background-color:#1E8449 ">
                <h5 class="modal-title"> <i class="fa fa-plus-square" aria-hidden="true"></i>&nbsp Sửa tài khoản</h5>
                <button type="button" class="close " style="color:red" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="">
                <div class="row mb-3">
                    <div class="col-md-3 col-xs-12 col-sm-12">
                        <strong>Tên người dùng</strong><span style="color:red"> *</span>
                    </div>
                    <div class="col-md-9 col-xs-12 col-sm-12">
                        <input type="text" class="form-control" value="@Model.UserName" id="editUserName" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3 col-xs-12 col-sm-12">
                        <strong>Email</strong><span style="color:red"> *</span>
                    </div>
                    <div class="col-md-9 col-xs-12 col-sm-12">
                        <input type="text" class="form-control" value="@Model.Email" id="editEmail" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3 col-xs-12 col-sm-12">
                        <strong>Số điện thoại</strong><span style="color:red"> *</span>
                    </div>
                    <div class="col-md-9 col-xs-12 col-sm-12">
                        <input type="text" class="form-control" value="@Model.Phone" id="editPhone" maxlength="10" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3 col-xs-12 col-sm-12">
                        <strong>Loại tài khoản</strong><span style="color:red"> *</span>
                    </div>
                    <div class="col-md-9 col-xs-12 col-sm-12">
                        <select class="form-control" id="editRole" value="@Model.Role">
                            <option value="@SystemParam.TYPE_ROLE_ADMIN" @(Model.Role.Equals(SystemParam.TYPE_ROLE_ADMIN) ? Html.Raw("selected") : Html.Raw(""))>Admin</option>
                            <option value="@SystemParam.TYPE_ROLE_MANAGEMENT" @(Model.Role.Equals(SystemParam.TYPE_ROLE_MANAGEMENT) ? Html.Raw("selected") : Html.Raw(""))>Quản lý điểm giao dịch</option>
                            <option value="@SystemParam.TYPE_ROLE_TELLERS" @(Model.Role.Equals(SystemParam.TYPE_ROLE_TELLERS) ? Html.Raw("selected") : Html.Raw(""))>Giao dịch viên</option>
                            <option value="@SystemParam.TYPE_ROLE_BUSINESS" @(Model.Role.Equals(SystemParam.TYPE_ROLE_BUSINESS) ? Html.Raw("selected") : Html.Raw(""))>Kinh Doanh</option>
                            <option value="@SystemParam.TYPE_ROLE_MARKETING" @(Model.Role.Equals(SystemParam.TYPE_ROLE_MARKETING) ? Html.Raw("selected") : Html.Raw(""))>Marketing</option>
                            <option value="@SystemParam.TYPE_ROLE_ACCOUNTANT" @(Model.Role.Equals(SystemParam.TYPE_ROLE_ACCOUNTANT) ? Html.Raw("selected") : Html.Raw(""))>Kế toán</option>
                            <option value="@SystemParam.TYPE_ROLE_BUSINESS_MANAGEMENT" @(Model.Role.Equals(SystemParam.TYPE_ROLE_BUSINESS_MANAGEMENT) ? Html.Raw("selected") : Html.Raw(""))>Quản lý Kinh doanh</option>
                        </select>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-3 col-xs-12 col-sm-12">
                        <strong>Mật khẩu</strong><span style="color:red"> *</span>
                    </div>
                    <div class="col-md-9 col-xs-12 col-sm-12 input-group" id="show_hide_password">
                        <input class="form-control" type="password" id="editPass" placeholder="Mật khẩu !" />
                        <div class="input-group-addon">
                            <a href=""><i class="fa fa-eye-slash btn btn-secondary" aria-hidden="true" style="font-size:24px"></i></a>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-3 col-xs-12 col-sm-12">
                        <strong>Xác nhận mật khẩu</strong><span style="color:red"> *</span>
                    </div>
                    <div class="col-md-9 col-xs-12 col-sm-12 input-group" id="editConfirmPassword">
                        <input class="form-control" type="password" id="txt-pass-confirm-edit" placeholder="Xác nhận mật khẩu !" />
                        <div class="input-group-addon">
                            <a href=""><i class="fa fa-eye-slash btn btn-secondary" aria-hidden="true" style="font-size:24px"></i></a>
                        </div>
                    </div>
                </div>

                <div class="row mt-2 float-right">
                    <div class="modal-footer">
                        <button type="button" style="width:100px" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                        <button type="button" style="width:100px" id="btnadduser" class="btn btn-success" onclick="SaveEditUser(@Model.UserID)">Lưu</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>