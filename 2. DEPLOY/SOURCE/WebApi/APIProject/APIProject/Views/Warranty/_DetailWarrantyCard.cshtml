<!-- The Modal -->
<div class="modal fade" id="QrcodeDetail">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-info-circle"></i> Chi tiết khuyến mãi</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <label class="col-md-8">Mã khuyến mãi</label>
                    <label class="col-md-4">Mã QR</label>
                </div>
                <div class="row mt-3">
                    <div class="col-md-8 text-bold text-primary">@String.Concat(ViewBag.WarrantyCodeCard, "2")</div>
                    <input type="hidden" value="@ViewBag.ID" id="warrantyCardID" />
                    <div class="col-md-4">
                        <input class="@String.Concat(ViewBag.WarrantyCodeCard,"2")" type="hidden" value="@String.Concat(ViewBag.WarrantyCodeCard,"2")" />
                        <div id="@String.Concat(ViewBag.WarrantyCodeCard,"2")"></div>
                        <script type="text/javascript">
                            $(document).ready(function () {
                                var qrcode = new QRCode(document.getElementById("@String.Concat(ViewBag.WarrantyCodeCard, "2")"), {
                                    width: 100,
                                    height: 100,
                                    correctLevel: QRCode.CorrectLevel.L
                                });
                                function makeCode() {
                                    var codeValue = $(".@String.Concat(ViewBag.WarrantyCodeCard, "2")").val();
                                    qrcode.makeCode(codeValue);
                                }
                                makeCode();
                            });
                        </script>
                    </div>
                </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-success" onclick="window.location = 'PrintQRCodeWarranty?ID=@ViewBag.ID'">Xuất excel mã QR</button>
            </div>
        </div>
    </div>
</div>
